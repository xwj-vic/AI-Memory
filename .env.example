# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# STM Configuration
STM_CONTEXT_WINDOW=10
MIN_SUMMARY_ITEMS=5

# LLM Configuration
LLM_PROVIDER=openai
# OpenAI Configuration
OPENAI_API_KEY=sk-your-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
